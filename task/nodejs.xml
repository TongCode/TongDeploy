<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<!--
		
		主要负责NodeJs项目的相关任务。
		
		Daniel 
		2016-06-09
	-->
	
	<!-- nodejs 项目安装依赖包 -->
	<target name="nodejs-install" description="npm install" >
		<exec executable="${basedir}/cmd/nodejs/npm-install.bat" failonerror="true">
			<arg line="${nodejs.install.path}" />
		</exec>
	</target>
	

	<!-- nodejs 使用forever启动项目 -->
	<target name="nodejs-start" description="forever start">
		<exec executable="${basedir}/cmd/nodejs/forever-start.bat" failonerror="true">
			<arg line="${nodejs.start.path}" />
			<arg line="${nodejs.start.param}" />
		</exec>
	</target>
	
	<!-- nodejs 使用 forever停止项目 -->
	<target name="nodejs-stop" description="forever stopall">
		<exec executable="${basedir}/cmd/nodejs/forever-stop.bat" failonerror="true"></exec>
	</target>

</project>